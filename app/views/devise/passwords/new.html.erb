<div class="row">
  <div class="col s12 m8 offset-m2">
    <div class="card">
      <div class="card-action green white-text">
        <h3>Forgot your password?</h3>
      </div>
      <div class="card-content">
        <%= simple_form_for(resource, as: resource_name,  url: password_path(resource_name), html: { method: :post }) do |f| %>
        <div class="row">
          <div class="col s6">
            <%= f.input :email, required: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), error: 'Kindly enter your email' %>

          </div>
        </div>
        <div>
          <%=f.button :submit, "Send me reset password instructions", class: " waves-effect waves-dark btn-large"%>
        </div>
        <% end %>
        <div class="row ">
          <div class="col s12">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>