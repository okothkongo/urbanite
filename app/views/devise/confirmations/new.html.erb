<div class="row">
  <div class="col s12 m8 offset-m2">
    <div class="card">
      <div class="card-action green white-text">
        <h3>Resend confirmation instructions</h3>
      </div>
      <div class="card-content">
        <%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
        <div class="row">
          <div class="col s6">
            <%= f.input :email, required: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), error: 'Kindly enter email you used to sign up' %>

          </div>
        </div>
        <div class="actions">
          <%=f.button :submit, "Resend confirmation instructions", class: " waves-effect waves-dark btn-large "%>
        </div>
        <% end %>
        <div class="row ">
          <div class="col s12 black-text">
            <p>Have an account?</p>
          </div>

          <div class="col s12">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>